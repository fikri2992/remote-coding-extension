{
  "name": "vue-frontend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "npm run type-check && vite build",
    "build:dev": "npm run type-check && vite build --mode development",
    "build:prod": "npm run type-check && vite build --mode production",
    "preview": "vite preview --host",
    "type-check": "vue-tsc --noEmit --skipLibCheck",
    "type-check:watch": "vue-tsc --noEmit --skipLibCheck --watch",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "clean": "rimraf dist ../../../out/webview/vue-frontend",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html"
  },
  "dependencies": {
    "@heroicons/vue": "^2.0.18",
    "pinia": "^2.1.7",
    "vitest": "^3.2.4",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.5.1",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "postcss": "^8.4.32",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "typescript": "~5.2.0",
    "vite": "^5.0.8",
    "vite-bundle-analyzer": "^0.7.0",
    "vue-tsc": "^1.8.25"
  }
}
