{
  "name": "vscode-extension-basic",
  "displayName": "Basic VSCode Extension",
  "description": "A basic VSCode extension with activity bar and button functionality",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:basicExtensionView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "basicExtension",
          "title": "Basic Extension",
          "icon": "$(symbol-misc)"
        }
      ]
    },
    "views": {
      "basicExtension": [
        {
          "id": "basicExtensionView",
          "name": "Basic Extension",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "basicExtension.executeAction",
        "title": "Execute Action"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}